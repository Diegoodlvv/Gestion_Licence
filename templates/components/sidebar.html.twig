<aside class="w-72 min-h-screen bg-slate-50 border-r border-slate-200 flex flex-col">
	<div class="px-6 py-5">
		<div class="flex items-center gap-3">
			<img src="{{ asset('icones/logoprojet.png') }}">
			<div>
				<p class="text-sm font-semibold text-slate-900">Lycée Saint-Vincent</p>
				<p class="text-xs text-slate-500">Enseignement Supérieur</p>
			</div>
		</div>
	</div>

	{% set current_route = app.request.attributes.get('_route') %}
	{% set menu1 = [
		{
			name: 'Calendrier',
			route: 'app_home',
			icone: 'Calendar.png'
		},
		{
			name: 'Interventions',
			route: 'app_intervention',
			icone: 'Interventions.png'
		},
		{
			name: 'Corps enseignant',
			route: 'app_instructor',
			icone: 'Enseignants.png'
		}
	]%}
	{% set menu2 = [
		{
			name: 'Modules',
			route: 'app_module',
			icone: 'Modules.png'
		},
		{
			name: "Blocs d'enseignements",
			route: 'app_teaching_block',
			icone: 'BlocsEnseignements.png'
		},
		{
			name: 'Années scolaire',
			route: 'app_school_year',
			icone: 'AnnéesScolaires.png'
		},
		{
			name: "Types d'interventions",
			route: 'app_interventiontype',
			icone: 'TypesInterventions.png'
		}
	]%}
	
	<nav class="flex-1 px-4">
		<p class="mt-6 mb-2 px-2 text-xs font-semibold text-slate-400 uppercase">
			Menu
		</p>

		<ul class="space-y-1">
			{% for item in menu1 %}
				<li>
					<a href="{{ path(item.route)}}" class="flex hover:bg-slate-800 hover:text-white transition-all duration-200 items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-slate-600 {{ current_route == item.route ? 'bg-slate-800 text-white' : '' }}">
						<span><img src="{{ asset('icones/'~ item.icone) }}"></span>
						<span>{{ item.name }}</span>
					</a>
				</li>
			{% endfor %}
		</ul>

		<p class="mt-8 mb-2 px-2 text-xs font-semibold text-slate-400 uppercase">
			Paramétrage
		</p>

		<ul class="space-y-1">
			{% for item in menu2 %}
				<li>
					<a href="{{ path(item.route)}}" class="flex hover:bg-slate-800 hover:text-white transition-all duration-200 items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-slate-600 {{ current_route == item.route ? 'bg-slate-800 text-white'  : '' }}">
						<span><img src="{{ asset('icones/' ~ item.icone) }}"></span>
						<span>{{ item.name }}</span>
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>

	<div class="border-t border-slate-200 px-6 py-4 flex items-center gap-3">
		<div class="w-9 h-9 rounded-full bg-slate-300"><img src="{{ asset('icones/stella.png') }}"></div>
		<div>
			<p class="text-sm font-medium text-slate-900">Stella Ribas</p>
			<p class="text-xs text-slate-500">Administrateur</p>
		</div>
	</div>
</aside>
