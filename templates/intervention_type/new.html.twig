{% extends 'base.html.twig' %}

{% block title %}Gestion des types d'intervention
{% endblock %}

{% block breadcrumb %}
	<twig:BreadcrumbItem label="Types d'intervention" href="{{ path('app_intervention') }}"/>
	<twig:BreadcrumbItem label="Ajouter un nouveau type d'intervention"/>
{% endblock %}

{% block body %}
	<main class="flex-1 bg-white p-12">
		<h1 class="text-2xl font-bold text-slate-900 mb-8">Gestion des types d'intervention</h1>

		<h2 class="text-lg font-semibold text-blue-800 mb-6">Ajouter un nouveau type d'intervention</h2>

		<div class="max-w-xl">
			{{ form_start(form) }}

			<div class="mb-6">
				{{ form_row(form.name) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.color) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.description) }}
			</div>

			<div class="mt-8 flex gap-4">
				<twig:Button label="Sauvegarder" type="submit"/>
				<a href="{{ path('app_interventiontype') }}">
					<twig:Button label="Retour" variant="grey" type="button"/>
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
