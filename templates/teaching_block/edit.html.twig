{% extends 'base.html.twig' %}

{% block title %}
	{{ teachingBlock.code }}
	:
	{{ teachingBlock.name }}
{% endblock %}

{% block breadcrumb %}
	<twig:BreadcrumbItem label="Blocs d'enseignement" href="{{ path('app_teaching_block') }}"/>
	<twig:BreadcrumbItem label="{{ teachingBlock.name }}"/>
{% endblock %}

{% block body %}
<main class="flex-1 bg-white p-12 font-sans">

	<div class="mb-8">
		<h1 class="text-3xl font-medium text-[#2C416E]0 mb-2">{{ teachingBlock.code }}
			:
			{{ teachingBlock.name }}
		</h1>
	</div>

	<div class="mb-6">
		{{ form_start(form) }}

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
				{{ form_row(form.code) }}
			</div>

			<div>
				{{ form_row(form.name) }}
			</div>
		</div>

		<div class="mb-6">
			{{ form_row(form.hours_count) }}
			</div>

			<div class="mb-8">
				{{ form_row(form.description) }}
			</div>

			<div class="mt-8 flex gap-4">
				<twig:Button label="Sauvegarder" type="submit"/>
				<a href="{{ path('app_teaching_block') }}">
					<twig:Button label="Retour" variant="grey" type="button"/>
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
