{% extends 'base.html.twig' %}

{% block title %}Hello InstructorController!
{% endblock %}

{% block body %}
	<main class="flex-1 bg-white p-12">
		<h1 class="text-2xl font-bold text-slate-900 mb-8">Gestion des enseignants</h1>

		<h2 class="text-lg font-semibold text-blue-800 mb-6">Ajouter un nouvel enseignant</h2>

		<div class="max-w-xl">
			{{ form_start(form) }}

			<div class="mb-4">
				{{ form_row(form.email) }}
			</div>
			<div class="flex gap-4 mb-4">
				<div class="w-1/2">
					{{ form_row(form.firstname) }}
				</div>
				<div class="w-1/2">
					{{ form_row(form.lastname) }}
				</div>
			</div>
			<div class="mb-4">
				{{ form_row(form.plainPassword) }}
			</div>
			<div class="mb-6">
				{{ form_row(form.module) }}
			</div>

			<div class="mt-8 flex gap-4">
				<a href="{{ path('app_instructor') }}">
					<twig:Button label="Retour" variant="grey" type="button"/>
				</a>
				<twig:Button label="Sauvegarder" type="submit"/>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
