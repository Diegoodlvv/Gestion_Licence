{% extends 'base.html.twig' %}

{% block title %}Gestion des semaines de cours
{% endblock %}

{% block body %}
	<main class="flex-1 bg-white p-12">
		<h1 class="text-2xl font-bold text-slate-900 mb-8">Gestion des semaines de cours</h1>

		<h2 class="text-lg font-semibold text-blue-800 mb-6">Ajouter une semaine de cours pour l'ann√©e
			{{ year.year }}</h2>

		<div class="max-w-xl">
			{{ form_start(form) }}

			<div class="mb-4">
				{{ form_row(form.start_date) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.end_date) }}
			</div>

			<div class="mt-8 flex gap-4">
				<twig:Button label="Sauvegarder" type="submit"/>
				<a href="{{ path('app_school_year_edit', {'id': year.id}) }}">
					<twig:Button label="Retour" variant="grey" type="button"/>
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
