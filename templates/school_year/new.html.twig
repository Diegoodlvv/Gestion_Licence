{% extends 'base.html.twig' %}

{% block title %}Gestion des années scolaires
{% endblock %}

{% block breadcrumb %}
	<twig:BreadcrumbItem label="Années scolaire" href="{{ path('app_school_year') }}"/>
	<twig:BreadcrumbItem label="Ajouter une nouvelle année"/>
{% endblock %}

{% block body %}
	<main class="flex-1 bg-white p-12">
		<h1 class="text-2xl font-bold text-slate-900 mb-8">Gestion des années scolaires</h1>

		<h2 class="text-lg font-semibold text-blue-800 mb-6">Ajouter une nouvelle année</h2>

		<div class="max-w-xl">
			{{ form_start(form) }}

			<div class="mb-4">
				{{ form_row(form.year) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.saison) }}
			</div>

			<div class="mt-8 flex gap-4">
				<twig:Button label="Sauvegarder" type="submit"/>
				<a href="{{ path('app_school_year') }}">
					<twig:Button label="Retour" variant="grey" type="button"/>
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
