{% extends 'base.html.twig' %}

{% block title %}Modifier une semaine de cours
{% endblock %}

{% block body %}
	<main
		class="flex-1 bg-white p-12 font-sans">
		{# Header Section #}
		<div class="mb-8">
			<h1 class="text-3xl font-semibold text-slate-800 mb-6">Promotion
				{{ year.year }}</h1>

			{# Form Section #}
			{{ form_start(form) }}

			<div class="mb-6">
				<label class="block text-sm font-medium text-slate-700 mb-2">Année - champ obligatoire</label>
				<input type="text" value="{{ year.year }}" disabled class="w-full px-4 py-3 border border-slate-200 rounded-md bg-gray-50 text-slate-500"/>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
				<div>
					{{ form_label(form.start_date, 'Date de début - champ obligatoire', {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
					{{ form_widget(form.start_date, {'attr': {'class': 'w-full px-4 py-3 border border-slate-200 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500 bg-gray-50'}}) }}
					{{ form_errors(form.start_date) }}
				</div>

				<div>
					{{ form_label(form.end_date, 'Date de fin - champ obligatoire', {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}}) }}
					{{ form_widget(form.end_date, {'attr': {'class': 'w-full px-4 py-3 border border-slate-200 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500 bg-gray-50'}}) }}
					{{ form_errors(form.end_date) }}
				</div>
			</div>

			{# Buttons Section #}
			<div class="flex gap-4 mb-12">
				<twig:Button label="Retour à la liste" variant="grey" href="{{ path('app_school_year_edit', {'id': year.id}) }}"/>
				<twig:Button label="Enregistrer les informations" variant="blue" type="submit"/>
				<twig:Button label="Supprimer" variant="red" type="button" href="{{ path('app_school_year_deleteWeek', {'id': year.id, 'weekId': week.id}) }}"/>
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
