{% extends 'base.html.twig' %}

{% block title %}Modifier un module
{% endblock %}

{% block breadcrumb %}
	<twig:BreadcrumbItem label="Modules" href="{{ path('app_module') }}"/>
	<twig:BreadcrumbItem label="{{ module.name }}"/>
{% endblock %}

{% block body %}
	<main class="flex-1 bg-white p-12 font-sans">
		<div class="mb-8">
			<h1 class="text-3xl font-medium text-[#2C416E] mb-2">{{ module.name }}</h1>
		</div>

		{{ form_start(form) }}

		<div class="mb-6">
			{{ form_row(form.teaching_block) }}
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
				{{ form_row(form.code) }}
			</div>

			<div>
				{{ form_row(form.name) }}
			</div>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
				{{ form_row(form.hoursCount) }}
			</div>

			<div>
				{{ form_row(form.parent) }}
			</div>
		</div>

		<div class="mb-6">
			{{ form_row(form.description) }}
		</div>

		<div class="flex items-center mb-8">
			{{ form_widget(form.capstoneProject) }}
			{{ form_label(form.capstoneProject) }}
		</div>

		<div class="flex gap-4">
			<twig:Button type="button" variant="grey" label="Retour a la liste" href="{{ path('app_module') }}"/>
			<twig:Button type="button" variant="red" label="Supprimer" href="#"/>
			<twig:Button label="Sauvegarder" type="submit"/>
		</div>

		{{ form_end(form) }}
	</main>
{% endblock %}
