{% extends 'base.html.twig' %}

{% block title %}Ajouter un module
{% endblock %}

{% block breadcrumb %}
	<twig:BreadcrumbItem label="Modules" href="{{ path('app_module') }}"/>
	<twig:BreadcrumbItem label="Ajouter un module"/>
{% endblock %}

{% block body %}
	<div class="flex-1 bg-white p-12 font-sans">
		<div class="mb-8">
			<h1 class="text-3xl font-medium text-[#2C416E] mb-2">Ajouter un module</h1>
		</div>

		{{ form_start(form) }}

		<div class="mb-6">
			{{ form_row(form.teaching_block) }}
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
				{{ form_row(form.code) }}
			</div>

			<div>
				{{ form_row(form.name) }}
			</div>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
				{{ form_row(form.hoursCount) }}
			</div>

			<div>
				{{ form_row(form.parent) }}
			</div>
		</div>

		<div class="mb-6">
			{{ form_row(form.description) }}
		</div>

		<div class="flex items-center mb-8">
			<div class="flex items-center gap-3">
				<label class="relative inline-flex items-center cursor-pointer">
					{{ form_widget(form.capstoneProject, {
                            attr: { class: 'sr-only peer' }
                        }) }}

					<div class=" w-10 h-5 bg-gray-300 rounded-full peer peer-checked:bg-blue-900 transition-colors   after:content-[''] after:absolute after:top-0.5 after:left-0.5  after:w-4
									after:h-4 after:bg-white after:rounded-full after:transition-transform peer-checked:after:translate-x-5">
					</div>
				</label>

				<span class="text-sm text-gray-800">
					{{ form_label(form.capstoneProject)}}
				</span>
			</div>

			{{ form_errors(form.capstoneProject) }}
		</div>

		<div class="flex gap-4">
			<twig:Button type="button" variant="grey" label="Retour a la liste" href="{{ path('app_module') }}"/>
			<twig:Button label="Sauvegarder" type="submit"/>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
